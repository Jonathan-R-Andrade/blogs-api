{
  "openapi": "3.0.0",
  "info": {
    "title": "Blogs API",
    "description": "API RESTful de blog com operações CRUD para criação e gerenciamento de conteúdo, com autenticação e autorização.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor Local"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Logar",
        "description": "Faz o login com o email e senha e retorna um token JWT (Json Web Token).",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "example": {
                "email": "fulano@email.com",
                "password": "abc*123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          },
          "400": {
            "description": "Senha e/ou email inválidos.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RespostaDeErro"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ErroDesconhecido"
          }
        }
      }
    },
    "/user": {
      "post": {
        "summary": "Criar um usuário",
        "description": "Cria um usuário e rotorna um token JWT (Json Web Token) e o id do usuário.",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CriarUsuario"
              },
              "example": {
                "displayName": "Fulano de Tal",
                "email": "fulano@email.com",
                "password": "abc*123",
                "image": "https://exemplo.com/minha-imagem.png"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RespostaAoCriarUmUsuario"
                }
              }
            }
          },
          "400": {
            "description": "Uma ou mais propriedade obrigatória não foi informada, ou está com o valor inválido.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RespostaDeErro"
                }
              }
            }
          },
          "409": {
            "description": "Um usuário com o email informado já existe.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RespostaDeErro"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ErroDesconhecido"
          }
        }
      },
      "get": {
        "summary": "Listar todos os usuários",
        "description": "Retorna um array com todos os usuários cadastrados.",
        "tags": ["User"],
        "security": [{ "TokenJWT": [] }],
        "responses": {
          "200": {
            "description": "Usuários listados com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Usuario"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/NaoAutorizado"
          },
          "500": {
            "$ref": "#/components/responses/ErroDesconhecido"
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "summary": "Obter um usuário pelo id",
        "description": "Retorna um objeto com as informações do usuário.",
        "tags": ["User"],
        "security": [{ "TokenJWT": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário retornado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Usuario"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/NaoAutorizado"
          },
          "404": {
            "$ref": "#/components/responses/UsuarioNaoEncontrado"
          },
          "500": {
            "$ref": "#/components/responses/ErroDesconhecido"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "TokenJWT": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "Token retornado ao fazer login ou ao criar um usuário."
      }
    },
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      },
      "Token": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        },
        "required": ["token"]
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 1
          },
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "nullable": true
          }
        },
        "required": ["id", "displayName", "email", "image"]
      },
      "CriarUsuario": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        },
        "required": ["displayName", "email", "password"]
      },
      "RespostaAoCriarUmUsuario": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "userId": {
            "type": "integer"
          }
        },
        "required": ["token", "userId"]
      },
      "RespostaDeErro": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "required": ["message"]
      }
    },
    "responses": {
      "ErroDesconhecido": {
        "description": "Erro desconhecido no servidor.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/RespostaDeErro"
            }
          }
        }
      },
      "NaoAutorizado": {
        "description": "Token não informado ou inválido.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/RespostaDeErro"
            }
          }
        }
      },
      "UsuarioNaoEncontrado": {
        "description": "Usuário não encontrado.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/RespostaDeErro"
            }
          }
        }
      }
    }
  }
}
